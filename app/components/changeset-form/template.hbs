<form>
  <div class="form-group">
    <label for="user">Utilizador</label>
    {{user-select id="user" userToSet=changeset.user usersToSelectFrom=users}}
  </div>
  <div class="form-group">
    <label for="notes">Notas</label>
    {{textarea id="notes" class="form-control" value=changeset.notes cols=100 rows=6}}
  </div>
  {{#if changeset.isNew}}
    <div class="form-group">
      {{#each changeset.change_payloads as |changePayload|}}
        {{json-editor json=changePayload.payload mode='code'}}
      {{/each}}
    </div>
  {{/if}}
</form>
