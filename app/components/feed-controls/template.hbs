<div class="row">
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Válida em:
      </span>
      {{bootstrap-datepicker
        class="form-control"
        autoclose=true
        clearBtn=true
        todayBtn=true
        format="yyyy-mm-dd"
        value=active_feed_version_valid_jsdate
        changeDate="setActiveFeedVersionValid"
      }}
    </div>
  </div>
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Expirada em:
      </span>
      {{bootstrap-datepicker
        class="form-control"
        autoclose=true
        clearBtn=true
        todayBtn=true
        format="yyyy-mm-dd"
        value=active_feed_version_expired_jsdate
        changeDate="setActiveFeedVersionExpired"
      }}
    </div>
  </div>
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Nível de Importação:
      </span>
      <select class="form-control" onchange={{action (mut active_feed_version_import_level) value="target.value"}}>
        <option value=""></option>
        <option value="1" selected={{eq active_feed_version_import_level "1"}}>Operador, paragens, rotas (1)</option>
        <option value="2" selected={{eq active_feed_version_import_level "2"}}>Horários, inclui nível 1 (2)</option>
        <option value="3" selected={{eq active_feed_version_import_level "3"}}>Valhalla Routing Dev (3)</option>
        <option value="4" selected={{eq active_feed_version_import_level "4"}}>Valhalla Routing Prod (4)</option>
      </select>
    </div>
  </div>
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      {{x-toggle showLabels=true onLabel="pode ser atualizada" offLabel="" value=active_feed_version_update}}
    </div>
  </div>
</div>

<!-- second row -->
<div class="row">
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Tag
      </span>
      <input type="text" class="form-control" value={{tag_key}} oninput={{action (mut tag_key_input) value="target.value"}} />
      <input type="text" class="form-control" value={{tag_value}} oninput={{action (mut tag_value_input) value="target.value"}} />
      <span class="input-group-addon">
        <button {{action "setTagKeyValue"}} class="btn btn-default">Filtrar</button>
      </span>
    </div>
  </div>
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Problema na busca:
      </span>
      <select class="form-control" onchange={{action (mut latest_fetch_exception) value="target.value"}}>
        <option value=""></option>
        <option value="true" selected={{eq latest_fetch_exception "true"}}>Sim</option>
        <option value="false" selected={{eq latest_fetch_exception "false"}}>Não</option>
      </select>
    </div>
  </div>
  <div class="col-sm-3 col-xs-6">
    <div class="input-group">
      <span class="input-group-addon">
        Última importação:
      </span>
      <select class="form-control" onchange={{action (mut latest_feed_version_import_status) value="target.value"}}>
        <option value=""></option>
        <option value="true" selected={{eq latest_feed_version_import_status "true"}}>Sucedeu</option>
        <option value="false" selected={{eq latest_feed_version_import_status "false"}}>Falhou</option>
        <option value="null" selected={{eq latest_feed_version_import_status "null"}}>Em Progresso</option>
      </select>
    </div>
  </div>

</div>
