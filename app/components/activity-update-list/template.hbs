{{#if currentlyFiltering}}
  {{#if filterByChangesetId}}
    <p>
      Atividade relacionada com o changeset #{{filterByChangesetId}}
      ({{#link-to 'index' (query-params changeset=null)}}limpar filtro{{/link-to}})
   </p>
  {{/if}}
  {{#if filterByFeedOnestopId}}
    <p>
      Atividade relacionada com a feed #{{filterByFeedOnestopId}}
      ({{#link-to 'index' (query-params feed=null)}}limpar filtro{{/link-to}})
   </p>
  {{/if}}
{{else}}
  <p>
    Filtrar por changeset:
    <ul>
      {{#each possibleChangesetsToFilterBy as |changesetId|}}
        <li>{{#link-to 'index' (query-params changeset=changesetId)}}#{{changesetId}}{{/link-to}}</li>
      {{/each}}
    </ul>
   </p>
  <p>
    Filtrar por feed:
    <ul>
      {{#each possibleFeedsToFilterBy as |feedOnestopId|}}
        <li>{{#link-to 'index' (query-params feed=feedOnestopId)}}{{feedOnestopId}}{{/link-to}}</li>
      {{/each}}
    </ul>
  </p>
{{/if}}

{{#each activityUpdates as |activityUpdate|}}
  {{activity-update-list/activity-update-entry activityUpdate=activityUpdate}}
{{else}}
  <p>Nenhuma atividade.</p>
{{/each}}
