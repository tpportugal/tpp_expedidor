<div class="row">
  <div class="col-md-9">
    <div class="form-group">
      <label>Tipo de Problema</label>
      {{#power-select options=model.issueTypes placeholder="" searchField="display" selected=issue_type onchange=(action "typeChanged") allowClear=true as |issueType|}}
        {{issueType}}
      {{/power-select}}
    </div>
    {{#issue-table model=model route="issues.route-geometry.show"}}{{/issue-table}}
    {{pagination-controls route="issues.route-geometry.index" hasPreviousPage=hasPreviousPage hasNextPage=hasNextPage previousOffset=previousOffset nextOffset=nextOffset perPage=per_page}}
  </div>
</div>
